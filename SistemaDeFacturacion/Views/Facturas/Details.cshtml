@model SistemaDeFacturacion.Models.Facturas

@{
    ViewBag.Title = "Detalles de Factura";
    ViewBag.TituloControlador = "Facturas";
    ViewBag.InfoPagina = "Muestra los detalles de una factura";
    ViewBag.TituloVentana = "INFORMACION DE LA FACTURA";
    ViewBag.FooterVentana = "No se pueden eliminar las facturas ni tampoco modificar, por integridad del sistema";
    Layout = "~/Views/Shared/Plantilla1.cshtml";
}
<div class="row">

    <div class="alert alert-default alert-dismissable">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>¡AVISO!</strong> <p>
    La informacion de la facura no puede ser modificada por ningun motivo, de lo contrario se perderia la integridad
    de toda la informacion del sistema, por tanto cualquier confusion contacte con el tecnico para saber
    que hacer.
    <br />
    </p>
    </div>
  <center>
      <a href="@Url.Action("ExportarFactura","Facturas", new { idCotizacion = Model.idCotizacion})" class="btn btn-success">Imprimir Factura</a>
  </center>
    <div class="col-md-4">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td colspan="2" class="bg-info"><center><strong>DATOS FACTURA</strong></center></td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <strong>No Factura:</strong>
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.idFactura)
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Nit:</strong>
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.nitCliente)
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Nombre:</strong>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.nombre)
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Direccion:</strong>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.direccion)
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Fecha:</strong>
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.fecha)
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Total :</strong>
                    </td>

                    <td>
                        Q. @Html.DisplayFor(model => model.total)
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Usuario:</strong>
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.usuario)
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Cotizacion:</strong>
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.idCotizacion)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-md-8">
        <div class="row">           
            @Html.Partial("_DetallesFactura")
        </div>
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-8">
                <div class="col-md-4">
                    <label>Total Cobrado</label>
                </div>
                <div class="col-md-4 bg-red-active">
                    Q. @Html.DisplayFor(model => model.total)
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <p>
        <center>
            <a href="@Url.Action("Index","Facturas")" class="btn btn-success">Regresar a lista de facturas</a>
            <a href="@Url.Action("Index","Cotizaciones")" class="btn btn-info">Ver todas las Cotizaciones</a>
        </center>
    </p>
</div>
