@using SistemaDeFacturacion.Models;
@{
    Proveedores proveedor = new Proveedores();
    if (Session["Proveedor"].ToString() == "" || Session["Proveedor"] == null)
    {
        proveedor = new Proveedores();
    }
    else
    {
        proveedor = (Proveedores)Session["Proveedor"];
    }
    List<Proveedores> proveedores = new List<Proveedores>();

    if (ViewBag.Proveedores == null )
    {

    }
    else
    {
        proveedores = (List<Proveedores>)ViewBag.Proveedores;
    }
}

<div class="row">
    <div class="col-md-12">
        <div class="col-md-7">
            <form id="fBuscarProveedor" action="BuscarProveedor" method="post" class="form-inline">
                <div class="form-group">
                    <div class="col-md-2">
                        <label>Proveedor:</label>
                    </div>
                    <div class="col-md-6">
                        <select class="selectpicker" data-live-search="true" title="id o nit del proveedor" id="idProveedor" name="idProveedor" required>
                            <option></option>
                            @{
                                foreach (var p in proveedores)
                                {
                                    <option value="@p.idProveedor" data-subtext="@p.direccion" data-tokens="@p.idProveedor @p.nombre @p.empresa">  @p.idProveedor, @p.empresa , @p.nombre </option>
                                }
                            }
                        </select>
                    </div>                   
                    <di class="col-md-4">
                        <input type="submit" value="Buscar" class="btn btn-info form-control" />
                    </di>                   
                </div>
            </form>
        </div>
        <div class="col-md-3">
            <button data-toggle="collapse" data-target="#demo" class="btn btn-danger form-control">Registrar Nuevo Proveedor</button>      
        </div>
    </div>
</div>

<div id="demo" class="collapse">

    <div class="row">
        <div class="col-md-12">
            <form id="fCargarProveedor" action="CargarProveedor" method="post" class="form-horizontal">
                <div class="form-inline">
                    <div class="row col-md-12">
                        <div class="col-md-4">
                            <div class="col-md-4">
                                <label>Id:</label>
                            </div>
                            <input type="text" name="idProveedor" placeholder="nit de la empresa" id="idProveedor" value="@proveedor.idProveedor" required class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <div class="col-md-4">
                                <label>Empresa:</label>
                            </div>
                            <input type="text" name="empresa" placeholder="ej. Importadora S.A" id="empresa" value="@proveedor.empresa" required class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <div class="col-md-4">
                                <label>Contacto:</label>
                            </div>
                            <input type="text" name="nombre" placeholder="Ej: Carlos Godoy" id="nombre" value="@proveedor.nombre" required class="form-control" />
                        </div>
                    </div>
                </div>
                <br />
                <div class="form-inline">
                    <div class="row col-md-12">

                        <div class="col-md-4">
                            <div class="col-md-4">
                                <label>Telefono:</label>
                            </div>
                            <input type="tel" placeholder="Ej: 78788777" name="telefono" id="telefono" value="@proveedor.telefono" required class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <div class="col-md-4">
                                <label>Direccion:</label>
                            </div>
                            <input type="text" name="direccion" placeholder="Ej: 0av. 45-50 ciudad Real" id="direccion" value="@proveedor.direccion" required class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <div class="col-md-4">
                                <label>Email:</label>
                            </div>
                            <input type="email" placeholder="Ej: ejemplo@ejemplo.com" name="email" id="email" value="@proveedor.email" class="form-control" />
                        </div>
                    </div>

                </div>

                <div class="row col-md-12">
                    <center>
                        <div class="form-group">
                            <input type="submit" value="Cargar Proveedor" class="btn btn-primary" />
                            <input type="reset" value="Borrar Datos" class="btn btn-warning" />
                        </div>
                    </center>
                </div>

            </form>
        </div>
    </div>
   
</div> 
@section scripts{
    <script>
        $('.selectpicker').selectpicker({
            style: 'btn-info',
            size: 10
        });
    </script>

}