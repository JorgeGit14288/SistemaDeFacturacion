    <form name="formImprimir" action="@Url.Action("Cotizar","Cotizar")" method="post">
        <div class="col-md-2">

        </div>
        <div class="col-md-4">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="COTIZAR" class="btn btn-danger form-control" />
                </div>
            </div>
        </div>
